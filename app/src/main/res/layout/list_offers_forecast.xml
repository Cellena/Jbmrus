<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView_offer"
        android:src="@drawable/back_img" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="#ffffffff">
    <TextView
            android:id="@+id/list_item_name_textview"
        android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="КОФЕ ЯМАЙКА БЛЮ МАУНТИН, ПОМОЛ ДЛЯ ТУРКИ, ОБЖАРКА СРЕДНЯЯ (200 Г)"
        android:textAlignment="center"
        android:textColor="#ff000000" />


        <TextView
            android:id="@+id/list_item_price_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2100"
            android:textStyle="bold"
            android:textIsSelectable="false"
            android:textSize="@dimen/abc_text_size_subtitle_material_toolbar"
            android:layout_weight="0.0001"
            android:paddingRight="2dp"
            android:textColor="#ff000000"
            android:paddingLeft="10dp" />


    <TextView
        android:id="@+id/list_item_curency_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Р"
        android:textStyle="bold"
        android:textIsSelectable="false"
        android:textSize="@dimen/abc_text_size_subtitle_material_toolbar"
        android:layout_weight="0.0001"
        android:textColor="#ff000000" />
</LinearLayout>

</LinearLayout>
