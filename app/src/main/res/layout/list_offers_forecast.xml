<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:orientation="vertical"
    android:padding="2dp"
    android:background="#ffcbb290"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="90"
        android:layout_margin="2dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView_offer"
            android:src="@drawable/back_img"
            android:background="#ffffffff"
            android:adjustViewBounds="true" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:orientation="horizontal"
        android:background="#ffcd853f"
        android:layout_weight="100"
        android:weightSum="100"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp">
    <TextView
            android:id="@+id/list_item_name_textview"
        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="КОФЕ ЯМАЙКА БЛЮ МАУНТИН, ПОМОЛ ДЛЯ ТУРКИ, ОБЖАРКА СРЕДНЯЯ (200 Г)"
            android:textAlignment="center"
            android:textColor="#ff000000"
        android:layout_weight="10"
        android:layout_marginLeft="2dp" />


        <TextView
            android:id="@+id/list_item_price_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2100"
            android:textStyle="bold"
            android:textIsSelectable="false"
            android:textSize="@dimen/abc_text_size_subtitle_material_toolbar"
            android:width="70dp"
            android:textColor="#ff000000"
            android:paddingLeft="10dp"
            android:layout_weight="43" />


    <TextView
        android:id="@+id/list_item_curency_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Р"
        android:textStyle="bold"
        android:textIsSelectable="false"
        android:textSize="@dimen/abc_text_size_subtitle_material_toolbar"
        android:textColor="#ff000000"
        android:layout_weight="48"
        android:paddingRight="2dp" />
</LinearLayout>

</LinearLayout>
